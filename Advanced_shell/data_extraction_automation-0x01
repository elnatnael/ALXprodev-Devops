#!/bin/bash

# Input JSON file
JSON_FILE="pikachu.json"

# Extract required fields using jq
name=$(jq -r '.name' "$JSON_FILE" | sed 's/.*/\u&/')  # Capitalize first letter
height=$(jq -r '.height' "$JSON_FILE" | awk '{printf "%.1f", $1 / 10}')  # decimeters to meters
weight=$(jq -r '.weight' "$JSON_FILE" | awk '{printf "%.1f", $1 / 10}')  # hectograms to kilograms
type=$(jq -r '.types[0].type.name' "$JSON_FILE" | sed 's/.*/\u&/')  # Capitalize first letter

# Final formatted output
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
